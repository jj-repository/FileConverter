{
  "name": "fileconverter",
  "private": true,
  "version": "1.0.0",
  "description": "Desktop file conversion application",
  "main": "electron/main.js",
  "homepage": "https://github.com/jj-repository/FileConverter",
  "author": {
    "name": "FileConverter",
    "email": "noreply@fileconverter.app"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.5"
  },
  "devDependencies": {
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^6.0.7",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.fileconverter.app",
    "productName": "FileConverter",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "../backend/**/*",
      "!../backend/venv/**/*",
      "!../backend/**/__pycache__/**/*",
      "!../backend/**/*.pyc"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!venv/**/*",
          "!**/__pycache__/**/*",
          "!**/*.pyc",
          "!build/**/*",
          "!*.spec",
          "!run_server.py"
        ]
      },
      {
        "from": "../resources/bin/${os}",
        "to": "resources/bin/${os}",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "build/icon.png",
      "maintainer": "FileConverter <noreply@fileconverter.app>"
    }
  }
}
